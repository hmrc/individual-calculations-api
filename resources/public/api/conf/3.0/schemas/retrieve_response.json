{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Retrieve a Self Assessment Tax Calculation",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "retrieve/metadata.json"
    },
    "inputs": {
      "$ref": "retrieve/inputs.json"
    },
    "calculation": {
      "$ref": "retrieve/calculation.json"
    },
    "messages": {
      "$ref": "retrieve/messages.json"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint",
            "type": "string",
            "example": "/individuals/calculations/{nino}/self-assessment/{taxYear}/{calculationId}"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource\nThe rel will be self where the action is retrieval of the same resource",
            "type": "string",
            "enum": [
              "self",
              "trigger",
              "submit-final-declaration"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint",
            "type": "string",
            "enum": [
              "GET",
              "POST"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ]
      }
    }
  },
  "required": [
    "metadata",
    "inputs"
  ],
  "additionalProperties": false
}
